{
	"name": "automation-core",
	"version": "1.37.0-in-testing.0",
	"private": true,
	"engines": {
		"node": "^12.22.1 || 14"
	},
	"scripts": {
		"start": "concurrently --prefix \"[{name}]\" --names \"METEOR,TSC\" -c \"bgBlue.bold,bgGreen.bold\" \"npm run debug --\" \"npm run watch-types -- --preserveWatchOutput\"",
		"debug": "meteor run --inspect",
		"libs:syncVersions": "cd ../packages && yarn sync-version",
		"libs:syncVersionsAndChangelogs": "cd ../packages && yarn sync-version-and-changelog",
		"postinstall": "meteor npm run prepareForTest",
		"prepareForTest": "node ../scripts/fixTestFibers.js",
		"unit": "jest",
		"unitci": "jest --maxWorkers 2 --coverage",
		"unitcov": "jest --coverage",
		"test": "meteor npm run check-types && meteor npm run unit",
		"watch": "jest --watch",
		"update-snapshots": "jest --updateSnapshot",
		"ci": "meteor npm run unitci && meteor npm run send-coverage",
		"ci:lint": "meteor npm run check-types && meteor npm run lint",
		"cov-open": "open-cli coverage/lcov-report/index.html",
		"cov": "meteor npm run unitcov && meteor npm run cov-open",
		"send-coverage": "codecov -p ..",
		"test-i": "npm run integration-test",
		"license-validate": "node ../scripts/checkLicenses.js --allowed=\"MIT,BSD,ISC,Apache,Unlicense,CC0,LGPL,CC BY 3.0,CC BY 4.0,MPL 2.0\" --excludePackages=timecode,rxjs/ajax,rxjs/fetch,rxjs/internal-compatibility,nw-pre-gyp-module-test,rxjs/operators,rxjs/testing,rxjs/webSocket,undefined,i18next-conv,@fortawesome/fontawesome-common-types,argv,indexof,custom-license,private,public-domain-module",
		"lint": "eslint . --ext .ts --ext .js --ext .tsx --ext .jsx",
		"lintfix": "npm run lint -- --fix",
		"quickformat": "prettier \"__mocks__/**\" --write ; prettier \"lib/**\" --write ; prettier \"server/**\" --write ; prettier \"client/**\" --write ; prettier \"*.json\" --write ; prettier \"*.js\" --write ; prettier \"*.md\" --write",
		"i18n-extract-pot": "node ./scripts/extract-i18next-pot.js -f \"{./client/ui/**/*.+(ts|tsx),./lib/mediaObjects.ts,./lib/rundownNotifications.ts,./server/migration/**/*.ts}\" -o i18n/template.pot",
		"i18n-compile-json": "npm run i18n-compile-json-nb & npm run i18n-compile-json-nn",
		"i18n-compile-json-nb": "i18next-conv -l nb -s i18n/nb.po -t public/locales/nb/translations.json --skipUntranslated",
		"i18n-compile-json-nn": "i18next-conv -l nn -s i18n/nn.po -t public/locales/nn/translations.json --skipUntranslated",
		"visualize": "meteor --production --extra-packages bundle-visualizer",
		"release": "standard-version --commit-all",
		"prepareChangelog": "npm run release -- --prerelease",
		"validate:all-dependencies": "npm run validate:prod-dependencies && npm run validate:dev-dependencies && npm run license-validate",
		"validate:prod-dependencies": "npm audit --production",
		"validate:dev-dependencies": "npm audit --only=dev --audit-level=moderate",
		"check-types": "tsc --noEmit -p tsconfig.json",
		"watch-types": "npm run check-types -- --watch"
	},
	"dependencies": {
		"@babel/runtime": "^7.15.4",
		"@crello/react-lottie": "0.0.9",
		"@fortawesome/fontawesome": "^1.1.8",
		"@fortawesome/fontawesome-free-solid": "^5.0.13",
		"@fortawesome/fontawesome-svg-core": "^1.2.36",
		"@fortawesome/free-solid-svg-icons": "^5.15.4",
		"@fortawesome/react-fontawesome": "^0.1.15",
		"@popperjs/core": "^2.10.1",
		"body-parser": "^1.19.0",
		"casparcg-connection": "^5.1.0",
		"classnames": "^2.3.1",
		"core-js": "^3.17.3",
		"debounce-fn": "^5.0.0",
		"deep-extend": "0.6.0",
		"deepmerge": "^4.2.2",
		"eslint-plugin-custom-rules": "file:eslint-rules",
		"fast-clone": "^1.5.13",
		"got": "^11.8.2",
		"html-entities": "^1.4.0",
		"i18next": "^19.9.2",
		"i18next-browser-languagedetector": "^4.3.1",
		"i18next-xhr-backend": "^3.2.2",
		"iconv-lite": "^0.6.3",
		"immutability-helper": "^3.1.1",
		"indexof": "0.0.1",
		"meteor-node-stubs": "^1.1.0",
		"moment": "^2.29.1",
		"object-path": "^0.11.7",
		"prop-types": "^15.7.2",
		"query-string": "^6.14.1",
		"rc-tooltip": "^4.2.2",
		"react": "^16.14.0",
		"react-bootstrap": "1.6.4",
		"react-circular-progressbar": "^2.0.4",
		"react-datepicker": "^3.8.0",
		"react-dnd": "^11.1.3",
		"react-dnd-html5-backend": "^11.1.3",
		"react-dom": "^16.14.0",
		"react-escape": "0.0.8",
		"react-hotkeys": "^2.0.0",
		"react-i18next": "~11.7.2",
		"react-intersection-observer": "^8.32.1",
		"react-moment": "^0.9.7",
		"react-popper": "^2.2.5",
		"react-router-dom": "^5.3.0",
		"react-timer-hoc": "^2.3.0",
		"type-fest": "^1.4.0",
		"underscore": "^1.13.1",
		"xmlbuilder": "^15.1.1"
	},
	"devDependencies": {
		"@sofie-automation/code-standard-preset": "^0.4.2",
		"@types/body-parser": "^1.19.1",
		"@types/classnames": "^2.3.1",
		"@types/css-font-loading-module": "0.0.4",
		"@types/deep-extend": "0.4.31",
		"@types/fibers": "3.1.0",
		"@types/jest": "^26.0.24",
		"@types/meteor": "1.4.47",
		"@types/mongodb": "^3.6.20",
		"@types/node": "^12.20.24",
		"@types/prop-types": "^15.7.4",
		"@types/react": "^16.14.15",
		"@types/react-circular-progressbar": "^1.1.0",
		"@types/react-datepicker": "^3.1.8",
		"@types/react-dom": "^16.9.14",
		"@types/react-i18next": "^8.1.0",
		"@types/react-router-dom": "^5.1.8",
		"@types/sinon": "^9.0.11",
		"@types/xmldom": "^0.1.31",
		"@welldone-software/why-did-you-render": "^4.3.1",
		"babel-jest": "^26.6.3",
		"codecov": "^3.8.3",
		"concurrently": "^6.2.1",
		"conventional-changelog-conventionalcommits": "4.4.0",
		"ejson": "^2.2.1",
		"eslint-plugin-react": "^7.25.1",
		"fibers-npm": "npm:fibers@4.0.3",
		"glob": "^7.1.7",
		"i18next-conv": "^10.2.0",
		"i18next-scanner": "^3.0.0",
		"jest": "^26.6.3",
		"legally": "^3.5.10",
		"meteor-babel": "^7.10.7",
		"meteor-promise": "0.8.7",
		"mock-http": "^1.1.0",
		"open-cli": "^6.0.1",
		"simple-git": "^2.45.1",
		"sinon": "^9.2.4",
		"standard-version": "^9.3.1",
		"ts-jest": "^26.5.6",
		"typescript": "~4.2.4",
		"xmldom": "^0.6.0",
		"yargs": "^16.2.0"
	},
	"prettier": "@sofie-automation/code-standard-preset/.prettierrc.json",
	"meteor": {
		"mainModule": {
			"client": "client/main.tsx",
			"server": "server/main.ts"
		}
	},
	"standard-version": {
		"scripts": {
			"postbump": "npm run libs:syncVersionsAndChangelogs"
		}
	}
}
